# Configuración del servidor Don't Starve Together
# Copia este archivo como .env y configura tus valores

# Token de Steam (OBLIGATORIO para servidores públicos)
# Obtén tu token en: https://accounts.klei.com/account/game/servers?game=DontStarveTogether
STEAM_TOKEN=tu_token_aqui

# Configuración del cluster
CLUSTER_NAME=dts-server
CLUSTER_PASSWORD=
MAX_PLAYERS=12
GAME_MODE=survival
PVP=false
PAUSE_WHEN_EMPTY=true

# Puerto base (los demás puertos se calculan automáticamente)
BASE_PORT=10999